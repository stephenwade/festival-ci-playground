{
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", ".eslintrc.cjs"],
  "exclude": ["build"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true
  }
}
